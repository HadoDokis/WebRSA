<?xml version="1.0"?>
<!--
	@see /usr/lib/php/data/PHP_PMD/resources/rulesets
	@link http://phpmd.org/rules/index.html
-->
<ruleset name="Custom ruleset"
	xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd"
	xsi:noNamespaceSchemaLocation="http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

	<description>Configuration de phpmd pour le plugin DefaultHelper</description>

	<!--
		Codesize avec reportLevel à 25 pour CyclomaticComplexity (10 par défaut),
		minimum à 50000 pour NPathComplexity (200 par défaut)

		DefaultUrl, DefaultDefaultHelper, DefaultTableHelper
	-->
	<rule ref="rulesets/codesize.xml/CyclomaticComplexity">
		<properties>
			<property name="reportLevel" value="25"/>
		</properties>
	</rule>
	<rule ref="rulesets/codesize.xml/NPathComplexity">
		<properties>
			<property name="minimum" value="50000"/>
		</properties>
	</rule>
	<rule ref="rulesets/codesize.xml/ExcessiveMethodLength" />
	<rule ref="rulesets/codesize.xml/ExcessiveClassLength" />
	<rule ref="rulesets/codesize.xml/ExcessiveParameterList" />
	<rule ref="rulesets/codesize.xml/ExcessivePublicCount" />
	<rule ref="rulesets/codesize.xml/TooManyFields" />
	<rule ref="rulesets/codesize.xml/TooManyMethods" />
	<rule ref="rulesets/codesize.xml/ExcessiveClassComplexity" />

	<!--
		Controversial moins CamelCasePropertyName, CamelCaseMethodName,
		CamelCaseParameterName, CamelCaseVariableName à cause des conventions
		de CakePHP.
	-->
	<rule ref="rulesets/controversial.xml/Superglobals" />
	<rule ref="rulesets/controversial.xml/CamelCaseClassName" />

	<!-- Design moins EvalExpression à cause de DefaultTableCellHelper -->
	<rule ref="rulesets/design.xml/ExitExpression" />
	<rule ref="rulesets/design.xml/GotoStatement" />
	<rule ref="rulesets/design.xml/NumberOfChildren" />
	<rule ref="rulesets/design.xml/DepthOfInheritance" />
	<rule ref="rulesets/design.xml/CouplingBetweenObjects" />

	<!-- Naming -->
	<rule ref="rulesets/naming.xml" />

	<!-- Unusedcode -->
	<rule ref="rulesets/unusedcode.xml" />
</ruleset>