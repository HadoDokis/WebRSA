	<property name="file.phpunit.config" value="${dir.cakephp.app}/Vendor/Jenkins/phpunit/config-module-pcg66.xml" />

	<property name="excludes" value="**/.*/**,**/Config/sql/**,**/Vendor/Netbeans/Templates/**,**/tmp/**" />

